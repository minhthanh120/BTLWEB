@model OnlineBookStore.Models.Entities.AUTHOR

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/BackendLayout.cshtml";
}

@using (Html.BeginForm("Create", "Author", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="row justify-content-center">
        <div class=" col-lg-6">
            <div class="form-horizontal">
                <h2>Tác giả mới</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    Tên tác giả:
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AUTHORNAME, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AUTHORNAME, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Thêm mới" class="btn btn-default" /> |
                        <a href="~/Author" class='btn btn-default'>Quay Lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
