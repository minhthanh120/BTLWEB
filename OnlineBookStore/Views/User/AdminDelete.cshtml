@model OnlineBookStore.Models.Entities.USER

<link href="~/Content/Site.css" rel="stylesheet" />

@{
    ViewBag.Title = "AdminDelete";
    Layout = "~/Views/Shared/BackendLayout.cshtml";
}

<h2>Bạn chắc chắn muốn xóa tài khoản quản trị này ?</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.USERID)
        @Html.HiddenFor(model => model.ADMRIGHT)
        @Html.HiddenFor(model => model.AVATAR)

        <div id="HASH" class="infomation">
            <div id="left">
                <h4>Ảnh đại diện:</h4>
                <div class="col-md-10">
                    <img src="@Url.Content(Model.AVATAR?? "~/Image/nulluser.png")" alt="Image not found" style="height:300px; width:300px" />
                </div>
            </div>
            <div id="right">
                <h4>Tên tài khoản:</h4>
                @Html.EditorFor(model => model.ACCOUNT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ACCOUNT, "", new { @class = "text-danger" })

                <br /><br />
                <h4>Mật khẩu:</h4>
                @Html.EditorFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })

                <br /><br />
                <h4>Tên người dùng:</h4>
                @Html.EditorFor(model => model.USERNAME, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.USERNAME, "", new { @class = "text-danger" })

                <br /><br />
                <h4>Địa chỉ:</h4>
                @Html.EditorFor(model => model.ADDRESS, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ADDRESS, "", new { @class = "text-danger" })

                <br /><br />
                <h4>Liên lạc:</h4>
                @Html.EditorFor(model => model.PHONE, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PHONE, "", new { @class = "text-danger" })

                <br /><br />
                <h4>Email:</h4>
                @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <button onclick="window.history.back()" class='btn btn-default' style="font-size: 19px">Quay về</button>
        <br />
    </dl>
    
    @using (Html.BeginForm("AdmDelAction/"+Model.USERID, "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xóa tài khoản" class="btn btn-default" style="font-size: 19px" />
            </div>
        </div>
        @*<div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>*@
    }
</div>
